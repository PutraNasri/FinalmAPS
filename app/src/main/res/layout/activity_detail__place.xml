<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="maps.elektro.com.finalmaps.Detail_Place">

    <TextView
        android:id="@+id/nama_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama_place"
        android:textSize="25sp"
        android:layout_below="@+id/image_View2"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:id="@+id/image_View2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Maps"
        android:id="@+id/button"
        android:onClick="onClicktombolmaps"
        android:textStyle="normal|bold"
        android:width="110dp"
        android:background="#304FFE"
        android:textColor="#000000"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Image"
        android:id="@+id/button5"
        android:onClick="onClicktombolimage"
        android:layout_marginBottom="63dp"
        android:textStyle="normal|bold"
        android:width="110dp"
        android:background="#304FFE"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

    <ScrollView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:text="info place"
        android:id="@+id/scrollView"
        android:layout_above="@+id/button"
        android:layout_below="@+id/nama_place"
        android:layout_alignRight="@+id/image_View2"
        android:layout_alignEnd="@+id/image_View2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/info_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info place"
            android:textSize="15sp"
            android:layout_below="@+id/nama_place"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />
    </ScrollView>


</RelativeLayout>